# Morning Scanner Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# TIMEZONE AND SCHEDULING
# =============================================================================
TZ=Europe/Stockholm
RUN_HOUR=8
RUN_MINUTE=30

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
EMAIL_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_TO=recipient@example.com

# =============================================================================
# TELEGRAM CONFIGURATION
# =============================================================================
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=your-bot-token-here
TELEGRAM_CHAT_ID=your-chat-id-here

# =============================================================================
# AI/LLM CONFIGURATION
# =============================================================================
USE_LLM=false
OPENAI_API_KEY=your-openai-api-key-here

# =============================================================================
# NEWS SOURCE SETTINGS
# =============================================================================
MFN_BASE_URL=https://www.mfn.se
MFN_DELAY=2
DI_MORGONKOLL_BASE_URL=https://www.di.se
DI_MORGONKOLL_DELAY=3

# =============================================================================
# SCRAPING SETTINGS
# =============================================================================
RESPECT_ROBOTS_TXT=true
USER_AGENT=Mozilla/5.0 (compatible; MorningScanner/1.0; +https://github.com/yourusername/morning-scanner)
REQUEST_TIMEOUT=30

# =============================================================================
# RANKING AND FILTERING
# =============================================================================
MIN_RELEVANCE_SCORE=0.3
MAX_ITEMS_PER_REPORT=20

# =============================================================================
# STORAGE SETTINGS
# =============================================================================
PICKS_LOG_FILE=storage/picks_log.csv
ERROR_LOG_FILE=storage/errors.log

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
DEBUG=false
DRY_RUN=false
